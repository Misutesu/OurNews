<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_well_come_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context="com.team60.ournews.module.ui.activity.WellComeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_well_come_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>

    <LinearLayout
        android:id="@+id/activity_well_come_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.3"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/activity_well_come_view_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_well_come_circle_one"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginRight="12dp"
                    android:alpha="0.4"
                    android:src="@drawable/circle"
                    android:tint="@color/black"/>

                <ImageView
                    android:id="@+id/activity_well_come_circle_two"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginRight="12dp"
                    android:alpha="0.4"
                    android:src="@drawable/circle"
                    android:tint="@color/black"/>

                <ImageView
                    android:id="@+id/activity_well_come_circle_three"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginRight="12dp"
                    android:alpha="0.4"
                    android:src="@drawable/circle"
                    android:tint="@color/black"/>

                <ImageView
                    android:id="@+id/activity_well_come_circle_four"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:alpha="0.4"
                    android:src="@drawable/circle"
                    android:tint="@color/black"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/activity_well_come_anim_circle"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/circle"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_well_come_skip_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="@string/skip"
                android:textColor="@color/white"/>

            <ImageButton
                android:id="@+id/activity_well_come_next_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/right"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_well_come_done_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:alpha="0.0"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="@string/start"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
