<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_type_new_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:foreground="?android:attr/selectableItemBackground"
              android:orientation="horizontal"
              android:padding="8dp">

    <ImageView
        android:id="@+id/item_type_new_img"
        android:layout_width="160dp"
        android:layout_height="108dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:layout_weight="1"
        android:paddingBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/item_type_new_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/textColor1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_type_new_create_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="?attr/textColor3"/>
    </RelativeLayout>
</LinearLayout>