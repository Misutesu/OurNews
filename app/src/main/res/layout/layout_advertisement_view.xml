<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advertisement_view_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="144dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/advertisement_view_view_pager"
        android:layout_width="match_parent"
        android:layout_height="144dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/advertisement_view_img_1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/circle"
            android:tint="?attr/colorPrimary" />

        <ImageView
            android:id="@+id/advertisement_view_img_2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/advertisement_view_img_3"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/advertisement_view_img_4"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/circle" />
    </LinearLayout>
</merge>